<div class="container site-inner show">  
	
	<%= form_for @media_object do |f| %>
		<div class="field">
			<%= f.label :image %><br>
			<%= f.file_field :image %>
		</div>

		<div class="field">
			<%= f.label :video %><br>
			<%= f.text_field :video %>
		</div>

	  <div class="field">
	    <%= f.label :caption %><br>
	    <%= f.text_field :caption %>
	  </div>

	  <div class="field">
	  	<%= f.label :featured %>
		  <%= f.check_box :featured  %>
		</div>

	  <div class="actions">
	    <%= f.submit "Update", class: "button button-blue" %>
	    <%= link_to 'Cancel', edit_work_path(@work) %> | 
	    <%= link_to 'Delete', @media_object, :method => :delete, :confirm => "You sure?" %>
	  </div>

	<% end %>

	<div class="push"></div>
</div>
